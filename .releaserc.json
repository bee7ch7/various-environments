{
   "branches":[
      "main",
      {
         "name":"dev",
         "prerelease":true
      },
      {
         "name":"stage",
         "prerelease":true
      }
   ],
   "plugins":[
      [
         "@semantic-release/commit-analyzer",
         {
            "preset":"angular",
            "releaseRules":[
               {
                  "type":"docs",
                  "scope":"README",
                  "release":"patch"
               },
               {
                  "type":"bug",
                  "release":"patch"
               },
               {
                  "type":"fix",
                  "release":"patch"
               },
               {
                  "type":"refactor",
                  "release":"patch"
               },
               {
                  "type":"feature",
                  "release":"minor"
               },
               {
                  "type":"release",
                  "release":"major"
               },
               {
                  "scope":"no-release",
                  "release":false
               }
            ]
         }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
         "@saithodev/semantic-release-backmerge",
         {
            "allowSameBranchMerge":"true",
            "backmergeBranches":[
               {"from": "main", "to": "dev"}
            ],
            "message":"docs: Preparations for next release [skip ci]",
            "plugins":[
               [
                  "@semantic-release/exec",
                  {
                     "successCmd":"echo 'Version in master is ${nextRelease.version}' > version.txt && git add version.txt"
                  }
               ]
            ]
         }
      ]
   ]
}
