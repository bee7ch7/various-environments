{
   "branches":[
      "main",
      {
         "name":"dev",
         "prerelease":true
      },
      {
         "name":"stage",
         "prerelease":true
      }
   ],
   "plugins":[
      [
         "@semantic-release/exec",
         {
            "successCmd":"if [ $(git rev-parse --abbrev-ref HEAD) = 'main' ]; then gh pr create --base dev --head main --title 'no-release: [skip ci] backmerge ${git describe --tags} - ${date '+%Y-%m-%d %H:%M'}' --body '[skip ci] backmerge ${git describe --tags} - ${date '+%Y-%m-%d %H:%M'}' ; fi"
         }
      ],
      [
         "@semantic-release/commit-analyzer",
         {
            "preset":"angular",
            "releaseRules":[
               {
                  "type":"docs",
                  "scope":"README",
                  "release":"patch"
               },
               {
                  "type":"bug",
                  "release":"patch"
               },
               {
                  "type":"fix",
                  "release":"patch"
               },
               {
                  "type":"refactor",
                  "release":"patch"
               },
               {
                  "type":"feature",
                  "release":"minor"
               },
               {
                  "type":"release",
                  "release":"major"
               },
               {
                  "scope":"no-release",
                  "release":false
               }
            ]
         }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
   ]
}
